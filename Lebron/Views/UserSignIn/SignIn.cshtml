@model BusinessLayer.Validation.User.UserSignInModel

@{
	ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<body>
	<!--Header-->
	<!--//header-->
	<!--/banner-->
	<!--//banner-->
	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Giriş Yap</h3>
			<div class="row inner-sec">
				<div class="login p-5 bg-light mx-auto mw-100">
					<form method="post">
						<div class="form-group">
							<label asp-for="UserName">Kullanıcı adı</label>
							<input asp-for="UserName" class="form-control">
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password">Parola</label>
							<input asp-for="Password" type="password" class="form-control">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-check mb-2">
							<label class="form-check-label">
								<input asp-for="RememberMe" type="checkbox" class="form-check-input">
								<span asp-validation-for="RememberMe" class="text-danger"></span>
								Beni hatırla
							</label>
						</div>
						<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
						<p><a asp-action="Add">Bir hesabın yok mu?</a></p>
						<p><a asp-action="ResendConfirmationEmail" asp-controller="User">Onay maili gelmedi mi?</a></p>
					</form>
				</div>
			</div>
		</div>
	</section>
