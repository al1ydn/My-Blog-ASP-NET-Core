@model Lebron.Models.UserEditModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<form method="post">
	<div class="mb-3">
		<label class="form-label">İsim</label>
		<div class="row align-items-center">
			<div class="col-4">
				<input asp-for="Name" class="form-control" />
			</div>
			<div class="col-4">
				<span class="form-text">
					Must be 8-20 characters long.
				</span>
			</div>
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">Mail adresi</label>
		<div class="row align-items-center">
			<div class="col-4">
				<input asp-for="Email" class="form-control" />
			</div>
			<div class="col-4">
				<input asp-for="UserName" class="form-control" />
			</div>
		</div>
	</div>
	<div class="mb-3">
		<div class="row align-items-center">
			<div class="col-4">
				<label class="form-label">Parola</label>
				<input asp-for="Password" type="password" class="form-control"/>
			</div>
			<div class="col-4">
				<label class="form-label">Parola yeniden</label>
				@* @Html.PasswordFor(x=>x.PasswordConfirm, new {@class = "form-control"}) *@
			</div>
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">Resim</label>
		<div class="row align-items-center ">
			<div class="col-8">
				<input asp-for="Image" class="form-control"/>
			</div>
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">Hakkında</label>
		<div class="row align-items-center ">
			<div class="col-8">
				<textarea asp-for="About" class="form-control" rows="4"></textarea>
			</div>
		</div>
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-success btn-sm" style="width: 160px;">Düzenle</button>
	</div>
</form>