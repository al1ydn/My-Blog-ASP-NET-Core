@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<div class="col-md-5 top-forms text-center mt-lg-3 mt-md-1 mt-0">
	@if ((await AuthorizationService
			.AuthorizeAsync(User, "OnlyAnonymous")).Succeeded)
	{
		<span class="mx-lg-4 mx-md-2  mx-1">
			<a asp-action="SignIn" asp-controller="UserSignIn">
				<i class="fas fa-sign-in-alt"></i> Giriş yap
			</a>
		</span>
		<span>
			<a asp-action="Add" asp-controller="User">
				<i class="fas fa-user-plus"></i> Kaydol
			</a>
		</span>
	}
	else
	{
		<span class="mx-lg-4 mx-md-2  mx-1">
			<a asp-route-userName="@User.Identity.Name" asp-action="Edit" asp-controller="User">
				<i class="far fa-user"></i> @User.Identity.Name
			</a>
		</span>
		<span>
			<a asp-action="UserSignOut" asp-controller="UserSignIn">
				<i class="fas fa-sign-out-alt"></i> Çıkış yap
			</a>
		</span>
	}
</div>
