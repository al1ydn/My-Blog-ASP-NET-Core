@model List<EntityLayer.Concrete.Message2>

<li class="nav-item dropdown">
	<a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
		<i class="mdi mdi-message-outline"></i>
		<span class="count-symbol bg-warning"></span>
	</a>
	<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
		<h6 class="p-3 mb-0">Mesajlar</h6>

		@foreach (var item in Model)
		{
			<div class="dropdown-divider"></div>
			<a class="dropdown-item preview-item" href="/Message2/Detail/@item.Id">
				<div class="preview-thumbnail">
					<img src="@item.SenderWriter.Image" alt="image" class="profile-pic">
				</div>
				<div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
					<h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderWriter.Name</h6>
					<p class="text-gray mb-0">@item.Date</p>
				</div>
			</a>
		}

		<div class="dropdown-divider"></div>
		<a href="/Message2" style="color: inherit;">
			<h6 class="p-3 mb-0 text-center">@Model.Count yeni mesaj</h6>
		</a>
	</div>
</li>
