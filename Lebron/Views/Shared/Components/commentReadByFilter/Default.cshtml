@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

	@if (Model.Count() == 0)
	{
		<h4>Henüz yorum yapılmadı</h4>
	}
	else
	{
		<h4>Yorumlar</h4>

		@foreach (var item in Model)
		{
			<div class="media">
				<img src="/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">@item.Username</h5>
					<p>@item.Content</p>
				</div>
			</div>
		}
	}

</div>