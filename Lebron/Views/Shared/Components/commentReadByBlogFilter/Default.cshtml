@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

	@if (Model.Count() == 0)
	{
		<h4>Henüz yorum yapılmadı</h4>
	}
	else
	{
		<h4>Yorumlar</h4>

		@foreach (var item in Model)
		{
			<div class="media">
				<div class="media-body">
					<div>
						<h5 class="mt-0">
							@item.Username
							<span style="font-weight:300">@(((DateTime)item.Date).ToString("MMM d yyyy"))</span>
						</h5>
					</div>
					<p class="mt-0">@item.Content</p>
				</div>
			</div>
		}
	}

</div>
