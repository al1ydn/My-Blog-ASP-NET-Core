@model List<EntityLayer.Concrete.Blog>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Son Bloglar</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Başlık</th>
								<th>Kategori</th>
								<th>Tarih</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="assets/images/faces/face1.jpg" class="mr-2" alt="image">
									</td>
									<td><a href="Blog/Detail/@item.Id" style="text-decoration: none; color: black;">@item.Title</a></td>
									<td>
										<label class="badge badge-gradient-success">@item.Category.Name</label>
									</td>
									<td>@(((DateTime)item.Date).ToString("MMM d yyyy"))</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
