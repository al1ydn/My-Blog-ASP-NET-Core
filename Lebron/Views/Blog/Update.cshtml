@model EntityLayer.Concrete.Blog

@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

@using (Html.BeginForm("Update", "Blog", FormMethod.Post))
{
	@await Html.PartialAsync("~/Views/Blog/Form.cshtml")

	@Html.HiddenFor(x => x.Date)
	@Html.HiddenFor(x => x.Status)
	@Html.HiddenFor(x => x.WriterId)

	<div class="mb-3">
		<button type="submit" class="btn btn-success btn-sm" style="width: 160px;">Düzenle</button>
	</div>
}
