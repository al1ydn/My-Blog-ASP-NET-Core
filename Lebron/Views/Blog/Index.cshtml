@using EntityLayer.Concrete
@model List<Blog>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!--/main-->
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Bloglar</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 card">
							<a href="/Blog/Detail/@item.Id">
								<img src="/CoreBlogTema/web/images/7.jpg" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @(((DateTime)item.Date).ToString("MMM d yyyy"))
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> 21
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fa fa-chevron-right"></i> @item.Category.Name
										</a>
									</li>
								</ul>
								<h5 class="card-title">
									<a href="/Blog/Detail/@item.Id">@item.Title</a>
								</h5>
								<p class="card-text mb-3">@item.Content.Substring(0,item.Content.Substring(0, 110).LastIndexOf(" "))...</p>
								<a href="/Blog/Detail/@item.Id" class="btn btn-primary read-m">Devamını Oku</a>
							</div>
							<br />
						</div>
					}
				</div>
				<nav aria-label="Page navigation example">
					<ul class="pagination justify-content-left mt-4">
						<li class="page-item disabled">
							<a class="page-link" href="#" tabindex="-1">Previous</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">1</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">2</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">3</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">Next</a>
						</li>
					</ul>
				</nav>
				<!--//left-->
			</div>
		</div>
	</div>
</section>
<!--//main-->
