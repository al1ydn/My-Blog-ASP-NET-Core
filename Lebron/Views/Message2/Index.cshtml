@model List<EntityLayer.Concrete.Message2>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Mesajlar</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Gönderen</th>
								<th>Konu</th>
								<th>Tarih</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="@item.SenderWriter.Image" class="mr-2" alt="image">
									</td>
									<td>
										<a href="#" style="text-decoration: none; color: black;">@item.SenderWriter.Name</a>
									</td>
									<td>
										<a href="Message2/Detail/@item.Id" style="text-decoration: none; color: black;">@item.Subject</a>
									</td>
									<td>@(((DateTime)item.Date).ToString("MMM d yyyy"))</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
