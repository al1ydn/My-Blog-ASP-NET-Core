@model List<EntityLayer.Concrete.Message2>

@{
	ViewData["Title"] = "Sendbox";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<script src="/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Mesajlar</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Gönderilen</th>
								<th>Konu</th>
								<th>Tarih</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{

								<tr>
									<td>
										<img src="@item.ReceiverAppUser.Image" class="mr-2" alt="image">
									</td>
									<td>
										<a href="#" style="text-decoration: none; color: black;">@item.ReceiverAppUser.Name</a>
									</td>
									<td>
										<a asp-action="Detail" asp-controller="Message2" asp-route-id="@item.Id" style="text-decoration: none; color: black;">@item.Subject</a>
									</td>
									<td>@(((DateTime)item.Date).ToString("MMM d yyyy"))</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>