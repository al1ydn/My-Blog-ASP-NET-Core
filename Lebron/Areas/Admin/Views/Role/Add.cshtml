@model Lebron.Areas.Admin.Models.RoleModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-6">
			<div class="ibox ">
				<div class="ibox-content">
					<form method="post">
						<div class="form-group row">
							<label asp-for="Name" class="col-sm-3 col-form-label">İsim *</label>
							<div class="col-sm">
								<input asp-for="Name" class="form-control">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-sm-3"></div>
							<div class="col-sm col-sm-offset-2">
								<button class="btn btn-primary" type="submit" style="width: 150px">Ekle</button>
								<a asp-action="GetList" class="btn btn-white" type="button" style="width: 150px">İptal</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
